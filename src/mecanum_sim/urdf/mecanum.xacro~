  <!--~~~~~~~~~~~~~~~~~~~~~~~~ ~ ROBOT FRLINK ~ ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
  <joint name="fr_joint" type="fixed">
      <parent link="base_link_0"/>
      <child link="fr_link"/>
      <origin rpy="0 0 0" xyz="${base_length/2 - wheel_setback} ${-base_width/2 - wheel_gap} 0.0"/>
      <axis xyz="0 0 0"/>
